<ul class="breadcrumb">
    <li>
        <p>YOU ARE HERE</p>
    </li>
    <li><span class="prev-link" data-no-turbolink><%= link_to 'Dashboard'.html_safe, dashboard_users_path %></span></li>
    <li><span class="active"> Role Listing</span></li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
		    <div class="grid-body ">
			    <div role="grid" class="dataTables_wrapper form-inline" id="example2_wrapper">
  	  		 	    <div class="row" data-no-turbolink>
				  	    <div class="col-md-6">
				  		    <%= link_to 'Add Role', new_role_path, class: "btn btn-primary newempl-btn", :style => "margin-left:12px"%>	
				  	    </div>
			  	  	</div>
             	    <table id="id_role_table" class="table table-striped dataTable listingTable" aria-describedby="example2_info">
					   <thead>
					       <% unless @roles.blank? %>
						       <tr role="row">
							       <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 22px;" aria-label=": activate to sort column ascending"></th>
							       <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 165px;" aria-label="Rendering engine: activate to sort column ascending">Name</th>
							       <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 219px;" aria-label="Browser: activate to sort column ascending">Action</th>
							   </tr>
                	   </thead>
                	   <tbody role="alert" aria-live="polite" aria-relevant="all">
						   <% @roles.each do |r| %>
				  	       <tr class="gradeX odd">
							   <td class="center "></td>
                    	       <td class=" "><%=r.name%></td>
	                 	 	   <td data-no-turbolink>
	                 				<%= link_to '<i title="Edit Role" class="fa fa-edit"></i>'.html_safe, edit_role_path(r) %> |
	                 				<%= link_to '<i title="Archive Role" class="fa fa-trash-o"></i>'.html_safe, r, :method => :delete, :data => { :confirm => 'Are you sure you wants to delete this role?' } %>
								</td>
                  		   </tr>
	   	      	  		<% end %>
						<% end %>
			  		</tbody>
		  		  </table>
		    </div>
        </div>
    </div>
</div>
	  
	  
<script type="text/javascript">
	$(function($){
		showHideMenu('li_administration');
	   });
</script>