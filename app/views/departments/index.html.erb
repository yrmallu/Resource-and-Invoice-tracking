<ul class="breadcrumb">
    <li>
        <p>YOU ARE HERE</p>
    </li>
    <li><span class="prev-link" data-no-turbolink><%= link_to 'Dashboard'.html_safe, dashboard_users_path %></span></li>
    <li><span class="active"> Department Listing</span></li>
</ul>

<div class="row-fluid">
	<div class="span12">
    	<div class="grid simple ">
		  <!-- <div class="grid-title">
             <h4> <span class="semi-bold">Departments</span></h4>
           </div> -->
        	  <div class="grid-body ">
                  <div role="grid" class="dataTables_wrapper form-inline" id="example2_wrapper">
	  	  		      <div class="row" data-no-turbolink>
					      <div class="col-md-6">
					  	      <%= link_to 'Add Department', new_department_path, class: "btn btn-primary newempl-btn", :style => "margin-left:12px"%>	
					      </div>
				  	  <!-- <div class="col-md-6">
						  <div class="dataTables_filter" id="example2_filter">
							  <label>Search: <input type="text" aria-controls="example2" class="input-medium"></label>
						  </div>
					  </div> -->
			  	      </div>
				  	  <table id="id_department_table" class="table table-striped dataTable listingTable" aria-describedby="example2_info">
					      <thead>
					          <% unless @departments.blank? %>
						          <tr role="row">
							          <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 22px;" aria-label=": activate to sort column ascending"></th>
							          <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 165px;" aria-label="Rendering engine: activate to sort column ascending">Name</th>
							          <th class="sorting" role="columnheader" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="width: 219px;" aria-label="Browser: activate to sort column ascending">Action</th>
								  </tr>  
                	      </thead>
                	      <tbody role="alert" aria-live="polite" aria-relevant="all">
						      <% @departments.each do |dept| %>
				  	              <tr class="gradeX odd">
							          <td class="center "></td>
                    	       	   	  <td class=" "><%=dept.name%></td>
	                 	 	   	   	  <td data-no-turbolink>
	                 					  <% if can? :update, Department %><%= link_to '<i title="Edit Department" class="fa fa-edit"></i>'.html_safe, edit_department_path(dept) %><%end%> |
	                 					  <% if can? :destroy, Department %><%= link_to '<i title="Archive Department" class="fa fa-trash-o"></i>'.html_safe, dept, :method => :delete, :data => { :confirm => 'Are you sure?' } %><%end%> 
									  </td>
                  		   	      </tr>
	   	      	  		   	  <% end %>
					   	      <% end %>
			  		     </tbody>
		  		      </table>
				  </div>
			</div>
    	</div>
	</div>
</div>
	  
<script type="text/javascript">
	$(function($){
		showHideMenu('li_administration');
	   });
</script>	 