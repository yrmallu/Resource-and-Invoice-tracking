    <div class="container">
		<br>
        <% flash.each do |key, value| %>
			<div class="alert alert-msg alert-<%= key %>"> <%= value %>
          		<button class="close" data-dismiss="alert"></button>
          	</div>
		<% end %>
		<div class="row login-container column-seperation">  
            <div class="col-md-5 col-md-offset-1">
				<h2 class="semi-bold">Magnifi.it</h2>
                <h4>Magnifi your control on organization</h4>
		        <ul class="org-controllist">
					<li>Project Management</li>
					<li>Invoicing</li>
					<li>HRMS</li>
					<li>Content Management</li>
					<li>Opex Tracking</li>
				</ul>
				<%= link_to '<span class="pull-left"><i class="icon-facebook"></i></span>
				    <span class="bold">Login with Magnifi</span>'.html_safe, signin_path ,class: "btn btn-block btn-info col-md-8" %>
            </div>
		    <div class="col-md-5 signin_text"> 
				<%= form_tag('/users/set_new_password', :method => "post", :id=>"reset_password_form", :class=>"form_validation") do %>
					<%= hidden_field_tag(:email_id, @email_id)%>
	    		<div class="grid simple">
				    <div class="grid-title no-border">
					     <h3> <span class="semi-bold">Reset password</span></h3>
					</div>
					<div class="grid-body no-border">
		        	<div class="row">
		        		<div class="form-group col-md-10">
		   		          <%= label_tag 'password_label', "New Password", :class => "form-label"%>
  	        				<div class="controls">
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									<%= password_field_tag 'password', nil, class: "form-control", :required=>true %>
								</div>
							</div>
						</div>
					</div>
			  	  	<div class="row">
	          		    <div class="form-group col-md-10">
	            			<%= label_tag 'password_confirmation_label', "Confirm Password", :class => "form-label" %>
	  	        			<span class="help"></span>
	            			<div class="controls">
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									<%= password_field_tag 'password_confirmation',nil, class: "form-control", :required=>true %>
								</div>
	            			</div>
	          		  	</div>
	          		</div>
		            <div class="row">
		                <div class="col-md-10">
		                   <%= submit_tag "Reset password ", class: "btn btn-success btn-cons", data: { disable_with: 'Resetting...' }%>
						</div>
		            </div>	
				</div>
				</div>
			<% end %>
			</div>
		</div>
 	</div>

