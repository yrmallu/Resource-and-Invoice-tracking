<% @activities.each do |activity| %>
  <div class="activity">
	  	<%= time_ago_in_words(activity.created_at) %> ago <br/>
	  	<%=image_tag(activity.owner.photos(:thumb), :class=>"image_index_setting") unless activity.owner.blank?%>
     	<%= link_to activity.owner.firstname, activity.owner if activity.owner %>
    	<%= render_activity activity %>
  </div>
<% end %>