<fieldset>
  <div class="container">
	<div class="col-xs-12 col-sm-9">
  	<div class="row">
		<div class="row">
  		  	<div class="col-lg-6">
	  		  	<div class="form-group" >
    	  		  	<%= f.label :name, "Module Name" %> <b><sup>*</sup></b>
    	  		  	<%= f.text_field :name, :required=>true, :class => "required" %>
	  		  	</div>
  		  	</div>
		</div>
		<div class="form-group">
			<%= f.label :description %><br />
			<%= f.text_area :description %>
		</div>
	</div>
	</div>
  </div>
<%= f.hidden_field :_destroy%>
<%= f.hidden_field(:id)%>
<%=link_to "Remove", '#', :class => 'remove_fields' unless ["edit", "update", "create", "show"].include?(action_name)%>
<%= f.hidden_field :project_id, :value=> "#{params[:id]}"%>
<%= f.hidden_field :user_id, :value =>"#{current_user.id}" %>
</fieldset>


